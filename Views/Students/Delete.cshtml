@model CourseEnrollmentSystem.ViewModels.GetStudentViewModel

@{
    ViewData["Title"] = "Delete Student";
}

<h2 class="mb-3 text-danger">Delete Student</h2>

<p>Are you sure you want to delete student <strong>@Model.FullName</strong>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

