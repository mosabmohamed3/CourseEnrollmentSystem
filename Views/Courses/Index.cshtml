@model CourseEnrollmentSystem.ViewModels.CourseListViewModel

@{
    ViewData["Title"] = "Courses";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Courses</h2>
    <a class="btn btn-primary" asp-action="Create">Add Course</a>
</div>

<div class="row row-cols-1 row-cols-md-2 g-3">
    @foreach (var course in Model.Courses)
    {
        <div class="col">
            @await Html.PartialAsync("_CourseCard", course)
        </div>
    }
</div>

<nav aria-label="Courses pagination" class="mt-3">
    <ul class="pagination">
        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.Page - 1)">Previous</a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.Page == i ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }
        <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.Page + 1)">Next</a>
        </li>
    </ul>
</nav>

